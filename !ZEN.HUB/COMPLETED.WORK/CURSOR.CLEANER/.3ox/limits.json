{
  "meta": {
    "version": "v1.0.0",
    "runtime": "ruby",
    "mode": "aggressive_optimizer"
  },
  "resources": {
    "files": {
      "max_file_size_mb": 500,
      "max_files_per_operation": 1000
    },
    "memory": {
      "max_process_memory_mb": 1000,
      "target_memory_reduction_mb": 200
    },
    "disk": {
      "min_free_space_gb": 5,
      "target_cleanup_gb": 50
    }
  },
  "safety": {
    "backup_required": true,
    "rollback_enabled": true,
    "dry_run_available": true,
    "whitelist_enforced": true
  },
  "aggressive": {
    "auto_clean_temp": true,
    "auto_disable_services": true,
    "auto_remove_bloatware": true,
    "auto_optimize_startup": true
  },
  "emergency": {
    "thresholds": {
      "memory_usage_critical": 90,
      "disk_space_critical_gb": 2,
      "cpu_usage_critical": 95
    },
    "actions": {
      "halt_on_critical_error": true,
      "auto_backup_on_emergency": true,
      "emergency_cleanup": true
    }
  }
}






